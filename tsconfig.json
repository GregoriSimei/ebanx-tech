{
    "compilerOptions": {
        "target": "ES2019",
        "lib": ["esnext"],
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./src",
        "outDir": "./dist",
        "paths": {
            "*": ["*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }